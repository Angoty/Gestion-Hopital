            </ul>
          </div>
        </nav>
      </header>
      <!--  Header End -->
      <div class="container-fluid">
        <div class="container-fluid">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title fw-semibold mb-4">Informations générales du patient:</h5>
              <div class="card">
                <div class="card-body" >
                  <form>
                    <div class="class1" style="float: left;">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Nom:
                                <input type="text" class="form-control" id="Angoty" aria-describedby="emailHelp" required >
                            </label>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Prenoms:
                                <input type="text" class="form-control" id="exampleInputPassword1" required>
                            </label>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Date de Naissance:
                                <input type="date" class="form-control" id="exampleInputPassword1" required>
                            </label>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Lieu de Naissance:
                                <select id="disabledSelect" class="form-select" required>
                                    @foreach(var l in @Model.lieux){
                                        <option value="@l.idLieu" >@l.province.intitule - @l.intitule</option>
                                    }
                                </select>
                            </label>
                        </div>
                        <div class="mb-3">
                            <label for="disabledSelect" class="form-label">Genre:
                                    @foreach(var g in @Model.genres){
                                        @g.intitule<input type="radio" class="" value="@g.idGenre" style="margin-left: 20px;" required>
                                    }
                            </label>  
                        </div>
                    </div>
                      <div class="class" style="margin-left: 470px; ">
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Adresse:
                                <input type="text" class="form-control" id="rechercheLieu" list="optionsList" oninput="afficherLieu()">
                                <datalist id="optionsList"></datalist>
                                <input type="hidden" name="" id="dataLieux" value="@json">

                            </label>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Email:
                                <input type="email" class="form-control" id="exampleInputPassword1">
                            </label>
                        </div>
                        <div class="mb-3">
                            <label for="disabledSelect" class="form-label">Numero
                                <input type="number" class="form-control" id="exampleInputPassword1">
                            </label>
                        </div>

                      </div>
                    <button type="submit" class="btn btn-primary" style="margin-left: 400px; margin-top:150px; width:150px; height:40px">Submit</button>
                  </form>
                </div>                                        
                </div>
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="~/assets/js/formPatient.js"></script>
